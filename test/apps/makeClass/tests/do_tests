echo "no params"                   2>&1 | tee test1.txt
makeClass -t                       >>test1.txt 2>&1

echo "no params"                   2>&1 | tee test2.txt
makeClass -t x                     >>test2.txt 2>&1

echo "non existant file"           2>&1 | tee test3.txt
makeClass -t -e x                  >>test3.txt 2>&1

echo "conflicting options"         2>&1 | tee test4.txt
makeClass -t -e -r                 >>test4.txt 2>&1

echo "conflicting options"         2>&1 | tee test5.txt
makeClass -t -l -r                 >>test5.txt 2>&1

echo "conflicting options"         2>&1 | tee test6.txt
makeClass -t -c -r                 >>test6.txt 2>&1

echo "conflicting options"         2>&1 | tee test7.txt
makeClass -t -c -r -e              >>test7.txt 2>&1

echo "clear option"                2>&1 | tee test8.txt
makeClass -t -c function           >>test8.txt 2>&1

echo "list option"                 2>&1 | tee test9.txt
makeClass -t -l function           >>test9.txt 2>&1

echo "edit option"                 2>&1 | tee test10.txt
makeClass -t -e function           >>test10.txt 2>&1

echo "run option"                  2>&1 | tee test11.txt
makeClass -r function              >>test11.txt 2>&1
cat function.[ch]*                 >test11_code.cpp
rm -f function.[ch]*

echo "run with namespace option"   2>&1 | tee test12.txt
makeClass -n:qblocks -r function   >>test12.txt 2>&1
cat function.[ch]*                 >test12_code.cpp
rm -f function.[ch]*

#we don't test the run option since it gets tested whenever it runs normally
